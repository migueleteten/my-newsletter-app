<%- include('../layouts/layout', { title: 'Inicio' }) %>

<section>
    <h1>Bienvenido a nuestro Newsletter</h1>
    <p>Explora las últimas noticias y actualizaciones de nuestra empresa.</p>
    <div class="sections">
        <% sections.forEach(section => { %>
            <div class="card">
                <h2><%= section.name %></h2>
                <p><%= section.description %></p>
                <a href="/secciones/<%= section._id %>">Ver más</a>
            </div>
        <% }) %>
    </div>
</section>